<Page x:Class="FsInfoCat.Desktop.View.Local.FileSystemsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FsInfoCat.Desktop.View.Local"
      mc:Ignorable="d"
      xmlns:Local="clr-namespace:FsInfoCat.Desktop.ViewModel.Local"
      xmlns:res="clr-namespace:FsInfoCat.Properties;assembly=FsInfoCat"
      xmlns:cvt="clr-namespace:FsInfoCat.Desktop.Converters"
      xmlns:localCvt="clr-namespace:FsInfoCat.Desktop.Converters.Local"
      xmlns:View="clr-namespace:FsInfoCat.Desktop.View"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FileSystemsPage" DataContext="{DynamicResource VM}">
    <Page.Resources>
        <Local:FileSystemsPageVM x:Key="VM"/>
        <cvt:DependencyObjectToVisibilityConverter x:Key="DependencyObjectToVisibilityConverter"/>
        <cvt:DependencyObjectToVisibilityConverter x:Key="InverseObjectToVisibilityConverter" NotNullSource="Collapsed" NullSource="Visible"/>
        <cvt:CrawlStatusToStringConverter x:Key="CrawlStatusToDescription" Display="Description" />
        <cvt:CrawlStatusToStringConverter x:Key="CrawlStatusToCol" Display="ShortName" />
        <cvt:DateTimeToStringConverter x:Key="DateTimeToString"/>
        <cvt:DateTimeToStringConverter x:Key="DateTimeToCol" Format="HH:mm:ss M/d/yyyy"/>
        <cvt:DateTimeToStringConverter x:Key="CrawlStartToString" NullSource="(never started)"/>
        <cvt:DateTimeToStringConverter x:Key="CrawlStartToCol" NullSource="(never)" Format="HH:mm:ss M/d/yyyy"/>
        <cvt:DateTimeToStringConverter x:Key="NextCrawlToCol" NullSource="(none)" Format="HH:mm:ss M/d/yyyy"/>
        <cvt:DateTimeToStringConverter x:Key="LastSynchronizedToString" NullSource="(not synchronized)"/>
        <cvt:TimeSpanToStringConverter x:Key="TimeSpanToString" NullSource="(unlimited)"/>
        <localCvt:CrawlConfigurationToAutoRescheduleString x:Key="CrawlConfigToAutoRescheduleString" NullSource="(none)"/>
    </Page.Resources>
    <Page.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}"/>
    </Page.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid ItemsSource="{Binding Items, Mode=OneWay}" AutoGenerateColumns="False" Margin="{DynamicResource DefaultSpacing}" IsReadOnly="True"
                  SelectedValue="{Binding SelectedItem, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding DisplayName, Mode=OneWay}" IsReadOnly="True" Header="{x:Static res:Resources.DisplayName_Name}" Width="*"/>
                <DataGridTextColumn Binding="{Binding IsInactive, Mode=OneWay}" IsReadOnly="True" Header="{x:Static res:Resources.DisplayName_IsInactive}" CanUserResize="True" Width="*"/>
                <DataGridTextColumn Binding="{Binding MaxNameLength, Mode=OneWay}" IsReadOnly="True" Header="{x:Static res:Resources.DisplayName_MaxNameLength}"/>
                <DataGridTextColumn Binding="{Binding IsReadOnly, Mode=OneWay}" IsReadOnly="True" Header="{x:Static res:Resources.DisplayName_ReadOnly}"/>
                <DataGridTextColumn Binding="{Binding DefaultDriveType, Mode=OneWay}" IsReadOnly="True" Header="{x:Static res:Resources.DisplayName_DefaultDriveType}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="{Binding SelectedItem, Converter={StaticResource InverseObjectToVisibilityConverter}}">
            <TextBlock Text="No file system type to dispay" HorizontalAlignment="Center" />
            <Button Content="{x:Static res:Resources.DisplayName_New}" HorizontalAlignment="Center"
                    Command="{Binding NewItemClickCommand, Mode=OneWay, Source={StaticResource VM}}" Width="{DynamicResource DefaultButtonWidth}"
                    Height="{DynamicResource DefaultButtonHeight}" Margin="{DynamicResource DefaultSpacing}"
                    ToolTip="{x:Static res:Resources.Description_NewCurrentCrawlConfig}" Style="{DynamicResource DefaultButton}"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="{DynamicResource DefaultSpacingLeft}" DataContext="{Binding SelectedItem}"
                    Visibility="{Binding Converter={StaticResource DependencyObjectToVisibilityConverter}, Mode=OneWay}">
            <WrapPanel Grid.Row="1" FlowDirection="RightToLeft">
                <Button Content="{x:Static res:Resources.DisplayName_Delete}" Width="{DynamicResource DefaultButtonWidth}" Height="{DynamicResource DefaultButtonHeight}"
                        Margin="{DynamicResource DefaultSpacing}" Command="{Binding DeleteCommand, Mode=OneWay}"
                        ToolTip="{x:Static res:Resources.Description_DeleteCurrentCrawlConfig}" Style="{DynamicResource DefaultButton}"/>
                <Button Content="{x:Static res:Resources.DisplayName_New}" Command="{Binding NewItemClickCommand, Mode=OneWay, Source={StaticResource VM}}"
                        Width="{DynamicResource DefaultButtonWidth}" Height="{DynamicResource DefaultButtonHeight}" Margin="{DynamicResource DefaultSpacing}"
                        ToolTip="{x:Static res:Resources.Description_NewCurrentCrawlConfig}" Style="{DynamicResource DefaultButton}"/>
                <Button Content="{x:Static res:Resources.DisplayName_Edit}" Width="{DynamicResource DefaultButtonWidth}" Height="{DynamicResource DefaultButtonHeight}"
                        Margin="{DynamicResource DefaultSpacing}" Command="{Binding EditCommand, Mode=OneWay}"
                        ToolTip="{x:Static res:Resources.Description_EditCurrentCrawlConfig}" Style="{DynamicResource DefaultButton}"/>
            </WrapPanel>
            <Label Content="{x:Static res:Resources.DisplayName_DisplayName}" Padding="{DynamicResource DefaultSpacingTopLeftRight}" FontWeight="Bold"/>
            <TextBlock Padding="{DynamicResource DefaultSpacingLeftRight}" Text="{Binding DisplayName, Mode=OneWay}" />
            <WrapPanel Grid.Row="1" FlowDirection="RightToLeft">
                <Button Content="{x:Static res:Resources.DisplayName_Delete}" Width="{DynamicResource DefaultButtonWidth}" Height="{DynamicResource DefaultButtonHeight}"
                        Margin="{DynamicResource DefaultSpacing}" Command="{Binding DeleteCommand, Mode=OneWay}"
                        ToolTip="{x:Static res:Resources.Description_DeleteCurrentCrawlConfig}" Style="{DynamicResource DefaultButton}"/>
                <Button Content="{x:Static res:Resources.DisplayName_New}" Command="{Binding NewItemClickCommand, Mode=OneWay, Source={StaticResource VM}}"
                        Width="{DynamicResource DefaultButtonWidth}" Height="{DynamicResource DefaultButtonHeight}" Margin="{DynamicResource DefaultSpacing}"
                        ToolTip="{x:Static res:Resources.Description_NewCurrentCrawlConfig}" Style="{DynamicResource DefaultButton}"/>
                <Button Content="{x:Static res:Resources.DisplayName_Edit}" Width="{DynamicResource DefaultButtonWidth}" Height="{DynamicResource DefaultButtonHeight}"
                        Margin="{DynamicResource DefaultSpacing}" Command="{Binding EditCommand, Mode=OneWay}"
                        ToolTip="{x:Static res:Resources.Description_EditCurrentCrawlConfig}" Style="{DynamicResource DefaultButton}"/>
            </WrapPanel>
        </StackPanel>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Left" Grid.RowSpan="2" Style="{DynamicResource VerticalGridSplitterStyle}"/>
        <View:AsyncBgModalControl Grid.ColumnSpan="2" d:IsHidden="True" DataContext="{Binding BgOps, Mode=OneWay}" />
    </Grid>
</Page>
