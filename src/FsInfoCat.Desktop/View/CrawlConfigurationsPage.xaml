<Page x:Class="FsInfoCat.Desktop.View.CrawlConfigurationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FsInfoCat.Desktop.View"
      xmlns:vm="clr-namespace:FsInfoCat.Desktop.ViewModel"
      xmlns:cvt="clr-namespace:FsInfoCat.Desktop.Converters"
      mc:Ignorable="d" DataContext="{DynamicResource VM}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Crawl Configurations">
    <Page.Resources>
        <vm:CrawlConfigurationsPageVM x:Key="VM"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Left"  Width="5" Grid.RowSpan="2"/>
        <DataGrid ItemsSource="{Binding CrawlConfigurations, Mode=OneWay}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding DisplayName, Mode=OneWay}" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        <WrapPanel Grid.Row="1" FlowDirection="RightToLeft">
            <Button Content="Add" Command="{Binding NewCrawlConfigCommand, Mode=OneWay}" Width="75" Height="25"/>
        </WrapPanel>
    </Grid>
</Page>
