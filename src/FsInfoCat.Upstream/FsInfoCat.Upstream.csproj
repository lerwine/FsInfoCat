    <PackageReference Include="Microsoft.Extensions.Logging.EventLog" Version="6.0.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.EventSource" Version="6.0.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.TraceSource" Version="6.0.1" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="6.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FsInfoCat\FsInfoCat.csproj">
      <CopyLocalSatelliteAssemblies>true</CopyLocalSatelliteAssemblies>
      <Private>true</Private>
    </ProjectReference>
  </ItemGroup>

